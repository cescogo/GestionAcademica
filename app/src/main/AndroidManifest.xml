<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adan.gestionacademica">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GestionAcademicaLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Estudiante"
            android:label="@string/title_activity_estudiante"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Administrador"
            android:label="@string/title_activity_administrador"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Profesor"
            android:label="@string/title_activity_profesor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Matriculador"
            android:label="@string/title_activity_matriculador"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EjemploTabla"
            android:label="@string/title_activity_ejemplo_tabla"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>